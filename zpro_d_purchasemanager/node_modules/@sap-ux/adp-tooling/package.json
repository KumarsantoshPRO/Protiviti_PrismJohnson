    "@sap-ux/ui5-config": "0.21.0"
  },
  "devDependencies": {
    "@types/ejs": "3.1.2",
    "@types/express": "4.17.17",
    "@types/mem-fs": "1.1.2",
    "@types/mem-fs-editor": "7.0.1",
    "@types/prompts": "2.4.4",
    "@types/supertest": "2.0.12",
    "@types/adm-zip": "0.5.3",
    "dotenv": "16.3.1",
    "nock": "13.2.1",
