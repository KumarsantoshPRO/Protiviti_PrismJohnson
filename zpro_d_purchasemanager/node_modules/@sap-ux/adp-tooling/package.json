    "!dist/**/*.map"
  ],
  "dependencies": {
    "sanitize-filename": "1.6.3",
    "ejs": "3.1.9",
    "mem-fs": "2.1.0",
    "mem-fs-editor": "9.4.0",
    "prompts": "2.4.2",
    "adm-zip": "0.5.10",
    "@sap-ux/axios-extension": "1.7.3",
    "@sap-ux/logger": "0.4.0",
