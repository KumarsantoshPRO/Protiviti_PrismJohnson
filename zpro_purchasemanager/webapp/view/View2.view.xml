    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:u="sap.ui.unified" xmlns:upload="sap.m.upload"
	xmlns:f="sap.f" xmlns:forms="sap.ui.layout.form"
	xmlns:uxap="sap.uxap"
	xmlns="sap.m">
    <Page title="Display Details" class="sapUiResponsiveContentPaddingLeft">
    
	    <uxap:ObjectPageLayout id="ObjectPageLayout"  upperCaseAnchorBar="false" showFooter="true">
					<uxap:headerTitle>
						<!-- <uxap:ObjectPageHeader objectTitle="RN123456801">
							<Button text="Back" press="onBack"></Button>
						</uxap:ObjectPageHeader> -->
						<uxap:ObjectPageDynamicHeaderTitle>
							<uxap:expandedHeading>
								<Title text="PAF NO: {oRequestModel>/pafNo}" wrapping="true"/>
							</uxap:expandedHeading>

							<uxap:expandedContent>
								<!-- <MessageStrip
													text="Send for Renegotiation"
													type="Warning"
													class="sapUiMediumMarginBottom">
										</MessageStrip> -->
							</uxap:expandedContent>

							<uxap:actions>
								<Button text="Back" press="onBack"/>
							</uxap:actions>
					
						</uxap:ObjectPageDynamicHeaderTitle>
					
					</uxap:headerTitle>
					<uxap:sections>
						<uxap:ObjectPageSection title="Transaction Details">
							<uxap:subSections>
								<uxap:ObjectPageSubSection>
									<uxap:blocks>
										 <!-- <MessageStrip
													text="Send for Renegotiation"
													type="Warning"
													class="sapUiMediumMarginBottom">
										</MessageStrip> -->
    <forms:SimpleForm class="sapUiMediumMarginTop" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="4" editable="true" title="">
										
											<Label text="Customer Name"/>
											<Text text="{oRequestModel>/customer}"/>
											<Label text="Size(s)ft"/>
											<Text text="{oRequestModel>/siz}" />
											<Label text="Design(s)" />
											<Text text="{oRequestModel>/des}"  />
											<Label text="Source" />
											<Text text="{oRequestModel>/sour}" />
											<Label text="Volume(sq.ft)" />
											<Text text="{oRequestModel>/vol}" />
                                            <Label text="Validity(Days)" />
											<Text text="{oRequestModel>/val}" />
                                            <Label text="Material Frieght Group(s)" />
											<Text text="{oRequestModel>/mfg}" />
                                            <Label text="Discount(%)" />
											<Text text="{oRequestModel>/dis}" />
                                            <Label text="Net ex factory(sq.ft)"/>
											<Text text="{oRequestModel>/nef}" />
                                            <Label text="Net ex factory(Ft)" />
											<Text text="{oRequestModel>/neff}" /> 
                                            <Label text="Frieght sq.ft(if applicable)" />
											<Text text="{oRequestModel>/fs}" />
                                            <Label text="Staus" />
											<Text text="{oRequestModel>/sts}" />
                                            <Label text="Remarks(if any)" />
											<Text text="{oRequestModel>/rem}" />
                                            <Label text="Renegotiation(BP)" />
											<Input width="50%"/>
										</forms:SimpleForm>
										</uxap:blocks>
										</uxap:ObjectPageSubSection>
							</uxap:subSections>		
							</uxap:ObjectPageSection>	
							
							
					</uxap:sections>
					<uxap:footer>
						<Bar>
							<contentRight>
								<Button text="Negotiation not possible" type="Emphasized"/>
								<Button text="Renegotiation" type="Emphasized"/>
							</contentRight>
						</Bar>
					</uxap:footer>
				</uxap:ObjectPageLayout>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
