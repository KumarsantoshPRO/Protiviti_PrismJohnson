<mvc:View
    xmlns:cards="sap.f.cards"
    controllerName="pj.zpurchasemanager.controller.View2"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:u="sap.ui.unified"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:upload="sap.m.upload"
    xmlns:f="sap.f"
    xmlns:forms="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
>
    <Page
        title="{i18n.View2>View2.Page.title}"
        class="sapUiResponsiveContentPaddingLeft"
    >
        <uxap:ObjectPageLayout
            id="ObjectPageLayout"
            upperCaseAnchorBar="false"
            showFooter="true"
        >
            <uxap:headerTitle>
                <!-- <uxap:ObjectPageHeader objectTitle="RN123456801">
							<Button text="Back" press="onBack"></Button>
						</uxap:ObjectPageHeader> -->
                <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:expandedHeading>
                        <Title
                            text="{i18n.View2>View2.Title.text}: {oRequestModel>/pafNo}"
                            wrapping="true"
                        />
                    </uxap:expandedHeading>

                    <uxap:expandedContent>
                        <!-- <MessageStrip
													text="Send for Renegotiation"
													type="Warning"
													class="sapUiMediumMarginBottom">
										</MessageStrip> -->
                    </uxap:expandedContent>

                    <uxap:actions>
                        <Button
                            text="{i18n.View2>View2.Button.text}"
                            press="onBack"
                        />
                    </uxap:actions>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>
            <uxap:sections>
                <uxap:ObjectPageSection title="{i18n.View2>View2.ObjectPageSection.title}">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection>
                            <uxap:blocks>
                                <!-- <MessageStrip
													text="Send for Renegotiation"
													type="Warning"
													class="sapUiMediumMarginBottom">
										</MessageStrip> -->
                                <forms:SimpleForm
                                    class="sapUiMediumMarginTop"
                                    layout="ColumnLayout"
                                    columnsM="2"
                                    columnsL="2"
                                    columnsXL="4"
                                    editable="true"
                                    title=""
                                >
                                    <Label text="{i18n.View2>View2.SimpleForm.pafNo}" />
                                    <Text text="{oRequestModel>/pafNo}" />
                                    <Label text="{i18n.View2>View2.SimpleForm.kunnr}" />
                                    <Text text="{oRequestModel>/Kunnr}" />
                                    <Label text="{i18n.View2>View2.SimpleForm.zsmm}" />
                                    <Text text="{oRequestModel>/Zsmm}" />
                                    <Label text="{i18n.View2>View2.SimpleForm.design}" />
                                    <Text text="{oRequestModel>/Design}" />
                                    <Label text="{i18n.View2>View2.SimpleForm.validity}" />
                                    <Text text="{oRequestModel>/Validity}" />
                                   
                                </forms:SimpleForm>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
                <uxap:ObjectPageSection title="{i18n.View2>View2.ObjectPageSection.title}">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection>
                            <uxap:blocks>
                                <!-- <MessageStrip
													text="Send for Renegotiation"
													type="Warning"
													class="sapUiMediumMarginBottom">
										</MessageStrip> -->
                                <Table
                id="idV2TblProducts"
                items="{oRequestModel1>/}"
                sticky="ColumnHeaders,HeaderToolbar"
                growing="true" growingScrollToLoad="true"
                enableScrolling="true"
                class="scrollableTable"
                fixedLayout="false"

            >
            <columns>
            
            <Column><Label text="{i18n.View2>View2.table.buyingpricesqft}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.grossmarginper}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.source}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.zvolumepft}" /></Column>
            <Column><Label text="{i18n.View2>View2.table.mfrgr}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.discountper}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.nefsqft}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.nef}"/></Column>
            <Column> <Label text="{i18n.View2>View2.table.frightsqft}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.remarks}"/></Column>
            <Column><Label text="{i18n.View2>View2.table.approvedbuyingprice}"/></Column>
            </columns>
            
            <items>
            <ColumnListItem>
            <cells>
            <Text text="{oRequestModel1>Buyingpricesqft}" />
            <Text text="{oRequestModel1>Grossmarginper}" />
            <Text text="{oRequestModel1>Source}" />
            <Text text="{oRequestModel1>Zvolumepft}" />
            <Text text="{oRequestModel1>Mfrgr}" />
            <Text text="{oRequestModel1>Discountper}" />
            <Text text="{oRequestModel1>Nefsqft}" />
            <Text text="{oRequestModel1>Nef}" />
            <Text text="{oRequestModel1>Frightsqft}" />
            <Text text="{oRequestModel1>Remarks}" />
            <Text text="{oRequestModel1>ApprovedBuyingprice}" />
            
            </cells>
            </ColumnListItem>
            </items>
            </Table>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
               
            </uxap:sections>
            <uxap:footer>
                <Bar>
                    <contentRight>
                        <Button
                            text="{i18n.View2>View2.Bar.Negotiationnotpossible}"
                            press="onNegotiationNotPossibleButtonPress"
                            type="Reject"
                        />
                        <Button
                            text="{i18n.View2>View2.Bar.Renegotiation}"
                            press="onRenegotiationButtonPress"
                            type="Accept"
                        />
                    </contentRight>
                </Bar>
            </uxap:footer>
        </uxap:ObjectPageLayout>

