<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <form:SimpleForm
        id="idV2SF"
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="4"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="3"
        columnsL="2"
        columnsM="2"
        singleContainerFullSize="false"
    >
        <form:content>
            <core:Title id="idV2T1" />
            <Label
                id="idV2LblCustCode"
                text="{i18n>view2.simpleForm.label.custCode}"
                required="true"
            />
            <Input
                value="{JSONModelPayload>/KUNNR}"
                id="idV2InpCustCode"
                showValueHelp="true"
                valueHelpRequest="onCustomerCodeHelp"
                class="sapUiSmallMarginEnd"
                placeholder="Customer Code"
            />
            <Label
                id="idV2LblCustName"
                text="{i18n>view2.simpleForm.label.custName}"
            />
            <Input
                value="{JSONModelPayload>/NAME}"
                id="idV2InpCustName"
                editable="false"
            />
            <Label
                id="idV2LblPayTerm"
                text="{i18n>view2.simpleForm.label.payTerm}"
                required="true"
            />
            <Select
                id="idV2SLPaymentTerm"
                forceSelection="false"
                items="{LocalJSONModels>/paymentTerms}"
                selectedKey="{JSONModelPayload>/ZTERM}"
            >
                <core:Item
                    id="idV2SLItemPayTerm"
                    key="{LocalJSONModels>key}"
                    text="{LocalJSONModels>text}"
                />
            </Select>
            <Label
                id="idV2LblValidity"
                text="{i18n>view2.simpleForm.label.validity}"
                required="true"
            />
            <Input
                id="idV2InpValidity"
                placeholder="Validity"
                maxLength="3"
                value="{JSONModelPayload>/VALIDITY}"
            />

            <Label
                id="idV2LblOrdNo"
                text="{i18n>view2.simpleForm.label.ordNo}"
                required="true"
            />
            <Input
                id="idV2InpOrderNo"
                placeholder="Order Number"
                value="{JSONModelPayload>/AUFNR}"
            />
            <core:Title id="idV2T2" />
            <Label
                id="idV2LblDistChnl"
                text="{i18n>view2.simpleForm.label.distChnl}"
                required="true"
            />
            <Select
                id="idV2SLDistChannel"
                forceSelection="false"
                items="{LocalJSONModels>/distributonChannel}"
                selectedKey="{JSONModelPayload>/VTWEG}"
            >
                <core:Item
                    id="idV2SLItemDistChannel"
                    key="{LocalJSONModels>key}"
                    text="{LocalJSONModels>text}"
                />
            </Select>
            <Label
                id="idV2LblSalOffice"
                text="{i18n>view2.simpleForm.label.salOffice}"
                required="true"
            />
            <Input
                id="idV2InpSalesOffice"
                showValueHelp="true"
                valueHelpRequest="onSalesOfficeHelp"
                class="sapUiSmallMarginEnd"
                placeholder="Sales Office"
                value="{JSONModelPayload>/VKBUR}"
            />
            <Label
                id="idV2LblVetical"
                text="{i18n>view2.simpleForm.label.vertical}"
                required="true"
            />
            <Select
                id="idV2SLVertical"
                forceSelection="false"
                items="{LocalJSONModels>/vertical}"
                selectedKey="{JSONModelPayload>/SPART}"
            >
                <core:Item
                    id="idV2SLItemVertical"
                    key="{LocalJSONModels>key}"
                    text="{LocalJSONModels>text}"
                />
            </Select>
            <Label
                id="idV2LblTranIns"
                text="{i18n>view2.simpleForm.label.TranIns}"
            />
            <Input
                id="idV2InpTransirInsurance"
                editable="false"
                value="{JSONModelPayload>/TI}"
            />
            <Label
                id="idV2LblGST"
                text="{i18n>view2.simpleForm.label.gst}"
            />
            <Input
                id="idV2InpGST"
                editable="false"
                value="{JSONModelPayload>/GST}"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
