<mvc:View controllerName="in.protiviti.employeeallocation.controller.View1"
     xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:l="sap.ui.layout"
	xmlns:f="sap.f" xmlns:core="sap.ui.core"
    xmlns="sap.m" xmlns:fb="sap.ui.comp.filterbar" xmlns:u="sap.ui.unified" xmlns:svm="smartva" xmlns:tnt="sap.tnt">
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
        <content>
		<f:DynamicPage headerExpanded="{/headerExpanded}">
                 <f:header>
				 <f:DynamicPageHeader>
					<f:content>
						<fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
                            <fb:FilterGroupItem name="CName" label="Customer Name" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<ComboBox id="cust1" items="{oFormModel>/}" width="60%" change="validateCombo" enabled="{oViewModel>/showAvailablebtn}" selectedKey="{oDataModel>/CustomerCode}">
                                            <core:ListItem key="{oFormModel>CustomerCode}" text="{oFormModel>CustomerName}"/>
                                        </ComboBox>
									</fb:control>
								</fb:FilterGroupItem>
                                <fb:FilterGroupItem name="PName" label="Project Name" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<Input	id="idName"
												placeholder=""
												showSuggestion="true"
												showValueHelp="true"
												valueHelpRequest="onValueHelpProjectNo">		
										</Input>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				    </f:DynamicPageHeader>
			    </f:header>
                <f:content>
            <Table inset="false" id="idEmployeeAllocation" items="{path:'oDataModel>/', sorter: {path: 'oDataModel>StartDate'}}">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="Items" level="H2"/>
						<ToolbarSpacer/>
						<!-- <OverflowToolbarButton tooltip="Delete" icon="sap-icon://delete" press="onDelete"/>
						<OverflowToolbarButton tooltip="New" icon="sap-icon://add" press="onCreate"/> -->
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="Customer Name" />
					</Column>
					<Column>
						<Text text="Project Name" />
					</Column>
					<Column>
						<Text text="Start Date" />
					</Column>
					<Column>
						<Text text="End Date" />
					</Column>
					<Column>
						<Text text="Project Location"/>
					</Column>
                    <Column>
						<Text text="Project Type"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" press="onClickofItem"  type="Navigation">
						<cells>
							<Text text="{oDataModel>CustomerName}" />
							<Text text="{oDataModel>ProjcetName}" />
                            <Text text="{ parts: [ 'oDataModel>StartDate'], formatter: '.formatter.getFormattedDateTime' }" />
                            <Text text="{ parts: [ 'oDataModel>EndDate'], formatter: '.formatter.getFormattedDateTime' }" />
							<Text text="{oDataModel>ProjectLocation}" />
							<Text text="{oDataModel>ProjectType}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
        </f:content>
           </f:DynamicPage>
        </content>
    </Page>
</mvc:View>