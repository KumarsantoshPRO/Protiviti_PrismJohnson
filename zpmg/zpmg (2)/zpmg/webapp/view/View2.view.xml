<mvc:View xmlns:cards="sap.f.cards" controllerName="pj.zpmg.controller.View2"
    xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:u="sap.ui.unified" xmlns:upload="sap.m.upload"
	xmlns:f="sap.f" xmlns:forms="sap.ui.layout.form" xmlns:uxap="sap.uxap" xmlns="sap.m">
    
    <Page enableScrolling="true" title="DISPLAY REQUEST DETAILS" class="sapUiResponsiveContentPaddingLeft">
    <uxap:ObjectPageLayout id="ObjectPageLayout"  upperCaseAnchorBar="false" showFooter="true">
					<uxap:headerTitle>
						<uxap:ObjectPageHeader objectTitle="RN123456801">
							<Button text="Back" press="onBack"></Button>
						</uxap:ObjectPageHeader>
					</uxap:headerTitle>
					<uxap:sections>
						<uxap:ObjectPageSection title="Transaction Details">
							<uxap:subSections>
								<uxap:ObjectPageSubSection>
									<uxap:blocks>
										<forms:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" editable="true" title="">
											<Label text="Customer Name"/>
											<Text text="{oRequestModel>/customer}"/>
											<Label text="Volume(sq.ft)"/>
											<Text text="{oRequestModel>/vol}" />
											<Label text="Value(INR Lakhs)" />
											<Text text="{oRequestModel>/val}"  />
											<Label text="Gross Margin(%)" />
											<Text text="{oRequestModel>/grmpe}" />
											<Label text="Gross Margin(Per sq.ft)" />
											<Text text="{oRequestModel>/grmps}" />
										</forms:SimpleForm>
										</uxap:blocks>
										</uxap:ObjectPageSubSection>
							</uxap:subSections>		
							</uxap:ObjectPageSection>	
							
							<uxap:ObjectPageSection title="Region Details">
								<uxap:subSections>
									<uxap:ObjectPageSubSection>
										<uxap:blocks>
											<forms:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" editable="true" title="">
											
												<Label text="Region"/>
												<Text text="{oRequestModel>/reg}"/>
												<Label text="Volume(sq.ft)"/>
												<Text text="{oRequestModel>/vol1}" />
												<Label text="Value(INR Lakhs)" />
												<Text text="{oRequestModel>/val1}"  />
												<Label text="Gross Margin(%)" />
												<Text text="{oRequestModel>/grmpe1}" />
												<Label text="Gross Margin(Per sq.ft)" />
												<Text text="{oRequestModel>/grmps1}" />
											</forms:SimpleForm>
										</uxap:blocks>
									</uxap:ObjectPageSubSection>
								</uxap:subSections>	
							</uxap:ObjectPageSection>


								<uxap:ObjectPageSection title="Transaction Details">
									<uxap:subSections>
										<uxap:ObjectPageSubSection>
										<uxap:blocks>
										<forms:SimpleForm editable="true" title="" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4">
										
											<Label text="Customer Name"/>
											<Text text="{oRequestModel>/customer}"/>
											<Label text="Customer Id"/>
											<Text text="{oRequestModel>/custId}" />
											<Label text="Size(s)(ft)" />
											<Text text="{oRequestModel>/siz}"  />
											<Label text="Design(s)" />
											<Text text="{oRequestModel>/des}" />
											<Label text="Source" />
											<Text text="{oRequestModel>/sour}" />
											<Label text="Volume(sqft)" />
											<Text text="{oRequestModel>/vol2}" />
											<Label text="Validity(Days)" />
											<Text text="{oRequestModel>/vali}" />
											<Label text="Material Freight Groups" />
											<Text text="{oRequestModel>/mfg}" />
											<Label text="Discount(%)" />
											<Text text="{oRequestModel>/dis}" />
											<Label text="Net Ex Factory(Sqft)" />
											<Text text="{oRequestModel>/nefsf}" />
											<Label text="Net Ex Factory(Ft)" />
											<Text text="{oRequestModel>/neff}"/>
											<Label text="Freight Sqft(if applicable)" />
											<Text text="{oRequestModel>/fsf}" />
											<Label text="Status" />
											<Text text="{oRequestModel>/sts}" />
											<Label text="Remarks(if any)" />
											<Text text="{oRequestModel>/rem}" />
										</forms:SimpleForm>
									</uxap:blocks>
								</uxap:ObjectPageSubSection>
								</uxap:subSections>
								</uxap:ObjectPageSection>
								
								
								<uxap:ObjectPageSection title="Margin Details">
									<uxap:subSections>
										<uxap:ObjectPageSubSection>
										<uxap:blocks>
										<forms:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" editable="true" title="">
										
											<Label text="Gross Margin"/>
											<tnt:InfoLabel text="{oRequestModel>/grmg}" renderMode="Loose" colorScheme="2" />
											<!-- <Text text="{oRequestModel>/grmg}"/> -->
											<Label text="Bench Mark Gross Margin"/>
											<Text text="{oRequestModel>/bmgm}" />
											<Label text="Discount%" />
											<Text text="{oRequestModel>/dis1}"  />
											<Label text="Recommended Discount %" />
											<Text text="{oRequestModel>/red}" />
											<Label text="Target Equivalent GM per sqft" />
											<Text text="{oRequestModel>/tegps}" />
											<Label text="Current Equivalent GM per sqft" />
											<Text text="{oRequestModel>/cegps}" />
											<Label text="Effect on Current Equivalent GM per sqft" />
											<Text text="{oRequestModel>/effect}" />
											<Label text="Vertical Gross Margin" />
											<Text text="{oRequestModel>/vgm}" />
											<Label text="Recommended Action" />
											<Text text="{oRequestModel>/recomnd}" />
										</forms:SimpleForm>
									</uxap:blocks>
								</uxap:ObjectPageSubSection>
								</uxap:subSections>
							</uxap:ObjectPageSection>
								
								
								<uxap:ObjectPageSection title="Cost Details">
								<uxap:subSections>
										<uxap:ObjectPageSubSection>
										<uxap:blocks>
										<forms:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" editable="true" title="">
										
											<Label text="HR Johnson Landed Price"/>
											<Text text="{oRequestModel>/hrlp}"/>
											<Label text="Ex factory price(s)"/>
											<Text text="{oRequestModel>/efp}" />
											<Label text="On Invoice Value and%" />
											<Text text="{oRequestModel>/oiv}"  />
											<Text text="{oRequestModel>/oiv2}"  />
											<Label text="Scheme Discount(Value and %)" />
											<Text text="{oRequestModel>/sd}" />
											<Text text="{oRequestModel>/sd2}"/>
											<Label text="Payment term discount(Value and %)" />
											<Text text="{oRequestModel>/ptd}" />
											<Text text="{oRequestModel>/ptd2}" />
											<Label text="SVC/BP" />
											<Text text="{oRequestModel>/svc}" />
											<Label text="Freight Cost" />
											<Text text="{oRequestModel>/fc}" />
											<Label text="ORC(Value and %)" />
											<Text text="{oRequestModel>/orc}"/>
											<Text text="{oRequestModel>/orc2}" />
											<Label text="S and D cost(Value and %)" />
											<Text text="{oRequestModel>/snd}" />
											<Text text="{oRequestModel>/snd2}" />
										</forms:SimpleForm>
									</uxap:blocks>
								</uxap:ObjectPageSubSection>
								</uxap:subSections>
								</uxap:ObjectPageSection>
								
								<uxap:ObjectPageSection title="Competitor Details">
								<uxap:subSections>
										<uxap:ObjectPageSubSection>
										<uxap:blocks>
										<forms:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" editable="true" title="">
											<Label text="Competitor Name"/>
											<Text text="{oRequestModel>/comn}"/>
											<Label text="Competitor Landed Price"/>
											<Text text="{oRequestModel>/comlp}" />
										</forms:SimpleForm>
									</uxap:blocks>
								</uxap:ObjectPageSubSection>
								</uxap:subSections>
								</uxap:ObjectPageSection>
								
								<uxap:ObjectPageSection titleUppercase="true" title="Product Details">
							<uxap:subSections>
								<uxap:ObjectPageSubSection titleUppercase="true">
									<uxap:blocks>
										<forms:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" editable="true">
											<Label text="Material Freight Groups"/>
											<Text text="{oRequestModel>/mfg}"/>
											<Label text="Size"/>
											<Text text="{oRequestModel>/siz}" />
											<Label text="Design" />
											<Text text="{oRequestModel>/des}"/>
											<Label text="Source" />
											<Text text="{oRequestModel>/sour}" />
											<Label text="Volume" />
											<Text text="{oRequestModel>/vol}" />
											<Label text="Discount%" />
											<Text text="{oRequestModel>/dis}" />
											<Label text="Net Ex Factory" />
											<Text text="{oRequestModel>/nef}" />
											<Label text="SVC/BP" />
											<Text text="{oRequestModel>/svc}" />
											<Label text="Gross Margin%" />
											<Text text="{oRequestModel>/gm}" />
											<Label text="Volume(sq.ft)" />
											<Text text="{oRequestModel>/val2}" />
                                            <Label text="Gross Margin%" />
											<Text text="{oRequestModel>/gm2}" />
										</forms:SimpleForm>
										</uxap:blocks>
										</uxap:ObjectPageSubSection>
							</uxap:subSections>		
							</uxap:ObjectPageSection>
					</uxap:sections>
					<uxap:footer>
						<Bar>
							<contentRight>
								<Button text="Forward to NH" 	icon="sap-icon://forward" press=".onForward" ariaHasPopup="Dialog" />
								<Button text="BP Renegotiation" type="Emphasized"/> 
								<Button text="Frieght Renegotiation" type="Emphasized"/>
								<Button text="Reject" type="Reject"/>
								<Button text="Approved" type="Accept"/>
							</contentRight>
						</Bar>
					</uxap:footer>
				</uxap:ObjectPageLayout>
    </Page>
</mvc:View>