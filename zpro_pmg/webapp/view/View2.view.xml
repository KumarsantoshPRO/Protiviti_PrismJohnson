					</uxap:sections>
					<uxap:footer>
						<Bar>
							<contentRight>
								<Button text="Forward to NH" enabled="false" 	icon="sap-icon://forward" press=".onForward" ariaHasPopup="Dialog" />
								<Button text="BP Renegotiation" press=".bpRenegotiation"  ariaHasPopup="Dialog" type="Emphasized"/> 
								<Button text="Freight Renegotiation" press=".freightRenegotiation"  ariaHasPopup="Dialog" type="Emphasized"/>
								<Button text="Reject" press=".reject"  ariaHasPopup="Dialog" type="Reject"/>
								<Button text="Approve" press=".Approved"  ariaHasPopup="Dialog" type="Accept"/>
							</contentRight>
						</Bar>
					</uxap:footer>
				</uxap:ObjectPageLayout>
    </Page>
</mvc:View>